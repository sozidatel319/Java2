<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <BorderPane>
        <top>
            <MenuBar>
                <Menu text="Вам сюда!">
                    <MenuItem fx:id="ex1" onAction="#exit" text="Выход" />
                </Menu>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            </MenuBar>
        </top>
    </BorderPane>

    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" />

    <HBox>
        <TextField fx:id="textField" onAction="#sendMSG" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMSG" text="send" />
    </HBox>

</VBox>
